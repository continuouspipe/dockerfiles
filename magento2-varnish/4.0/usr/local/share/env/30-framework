#!/bin/bash

export MAGENTO_MODE=${MAGENTO_MODE:-production}
export PURGE_IPS=${PURGE_IPS:-\"172.0.0.0\"/8,\"10.0.0.0\"/8}

MAGENTO_USE_SEPARATE_ADMIN_CONTAINER=${MAGENTO_USE_SEPARATE_ADMIN_CONTAINER:-false}
MAGENTO_USE_SEPARATE_ADMIN_CONTAINER="$(convert_to_boolean_string "$MAGENTO_USE_SEPARATE_ADMIN_CONTAINER")"
export MAGENTO_USE_SEPARATE_ADMIN_CONTAINER

export MAGENTO_ADMIN_FRONTNAME_REGEX_ESCAPED=${MAGENTO_ADMIN_FRONTNAME_REGEX_ESCAPED:-admin}

export MAGENTO_ADMIN_BACKEND_HOST=${MAGENTO_ADMIN_BACKEND_HOST:-admin}
export MAGENTO_ADMIN_BACKEND_PORT=${MAGENTO_ADMIN_BACKEND_PORT:-80}

MAGENTO_USE_ADMIN_CONTAINER_FOR_MEDIA=${MAGENTO_USE_ADMIN_CONTAINER_FOR_MEDIA:-false}
MAGENTO_USE_ADMIN_CONTAINER_FOR_MEDIA="$(convert_to_boolean_string "$MAGENTO_USE_ADMIN_CONTAINER_FOR_MEDIA")"
export MAGENTO_USE_ADMIN_CONTAINER_FOR_MEDIA
