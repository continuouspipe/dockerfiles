#!/bin/bash

export VARNISH_CACHE_SIZE=${VARNISH_CACHE_SIZE:-1g}
export VARNISH_START_PARAMS=${VARNISH_START_PARAMS:-}
export VARNISH_BACKEND_HOST=${VARNISH_BACKEND_HOST:-web}
export VARNISH_BACKEND_PORT=${VARNISH_BACKEND_PORT:-80}

CURRENT_VARNISH_SECRET=$(cat /etc/varnish/secret)
if [ -n "$VARNISH_SECRET" ]; then
  export VARNISH_SECRET=$CURRENT_VARNISH_SECRET
fi
